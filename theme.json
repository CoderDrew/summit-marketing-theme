{
  "version": 3,

  "settings": {
    "useRootPaddingAwareAlignments": true,

    "layout": {
      "contentSize": "1200px",
      "wideSize": "1400px"
    },

    "color": {
      "defaultPalette": false,
      "palette": [
        { "slug": "midnight", "color": "#0B0F14", "name": "Midnight Black" },
        { "slug": "graphite", "color": "#141A21", "name": "Graphite" },
        { "slug": "steel", "color": "#2A3441", "name": "Steel Gray" },
        { "slug": "mist", "color": "#8FA4BF", "name": "Mist Gray" },
        { "slug": "cloud", "color": "#F5F7FA", "name": "Cloud White" },
        { "slug": "summit-blue", "color": "#3B82F6", "name": "Summit Blue" },
        { "slug": "ice-blue", "color": "#93C5FD", "name": "Ice Blue" }
      ]
    },

    "typography": {
      "defaultFontSizes": false,
      "fontSizes": [
        { "slug": "xs", "size": "0.75rem", "name": "XS" },
        { "slug": "sm", "size": "0.875rem", "name": "SM" },
        { "slug": "base", "size": "1rem", "name": "Base" },
        { "slug": "lg", "size": "1.125rem", "name": "LG" },
        { "slug": "xl", "size": "1.375rem", "name": "XL" },
        { "slug": "2xl", "size": "1.75rem", "name": "2XL" },
        { "slug": "3xl", "size": "2.25rem", "name": "3XL" },
        {
          "slug": "hero",
          "size": "clamp(2.75rem, 6vw, 4rem)",
          "name": "Hero"
        }
      ]
    },

    "spacing": {
      "units": ["px", "rem", "vw"],
      "spacingSizes": [
        { "slug": "xs", "size": "0.5rem", "name": "XS" },
        { "slug": "sm", "size": "1rem", "name": "SM" },
        { "slug": "md", "size": "2rem", "name": "MD" },
        { "slug": "lg", "size": "3rem", "name": "LG" },
        { "slug": "xl", "size": "5rem", "name": "XL" },
        { "slug": "2xl", "size": "8rem", "name": "2XL" }
      ]
    }
  },

  "styles": {
    "color": {
      "background": "var(--wp--preset--color--midnight)",
      "text": "var(--wp--preset--color--cloud)"
    },

    "typography": {
      "fontSize": "var(--wp--preset--font-size--base)"
    },

    "elements": {
      "heading": {
        "typography": {
          "fontWeight": "700",
          "lineHeight": "1.1"
        }
      },

      "paragraph": {
        "typography": {
          "lineHeight": "1.6"
        }
      },

      "button": {
        "border": {
          "radius": "4px"
        }
      }
    },

    "blocks": {
      "core/group": {
        "spacing": {
          "padding": {
            "top": "var(--wp--preset--spacing--xl)",
            "bottom": "var(--wp--preset--spacing--xl)"
          }
        }
      }
    }
  }
}
